<!doctype html>
<html lang="en">
    <head>
        <title>Application</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />

        <link href="/stylesheets/header.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <div class="px-3 py-2 bg-dark text-white">
              <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                  <div class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                    <span>No Poor Among Us</span>
                  </div>
        
                  <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                    <li>
                      <a href="/" class="nav-link text-white">
                        <div class="row">
                          <span data-feather="home"></span>
                        </div>
                        <div class="row gy-1" style="text-align: center;">
                          <span>Home</span>
                        </div>
                      </a>
                    </li>
                    <li>
                      <a href="#" class="nav-link text-secondary">
                        <div class="row">
                          <span data-feather="file-text"></span>
                        </div>
                        <div class="row gy-1" style="text-align: center;">
                          <span>Apply Now</span>
                        </div>
                      </a>
                    </li>
                    <li style="display: grid; align-items: center;">
                      <a href="login" class="nav-link text-white">
                        <div class="row">
                          <span data-feather="user"></span>
                        </div>
                        <div class="row gy-1" style="text-align: center;">
                          <span>Login</span>
                        </div>
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </header>

          <main>
            <div class="container border rounded my-5">
                <% if (typeof error !== 'undefined') { %>
                    <div class="alert alert-danger mt-3" role="alert">
                        <%= error %>
                    </div>
                <% } %>
                <% if (typeof message !== 'undefined') { %>
                    <div class="alert alert-success mt-3" role="alert">
                        <%= message %>
                    </div>
                <% } %>
                <form method="post" action="/apply">
                    <!-- First and Last Name -->
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="text"
                                    class="form-control"
                                    name="firstName"
                                    id="firstName"
                                    placeholder="First Name"
                                    required
                                />
                                <label for="firstName" class="form-label">First Name</label>
                            </div>  
                        </div>
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="text"
                                    class="form-control"
                                    name="lastName"
                                    id="lastName"
                                    placeholder="Last Name"
                                    required
                                />
                                <label for="lastName" class="form-label">Last Name</label>
                            </div>  
                        </div>
                    </div>
    
                    <!-- Date of Birth -->
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="date"
                                    class="form-control"
                                    name="dateOfBirth"
                                    id="dateOfBirth"
                                    placeholder="Date of Birth"
                                    required
                                />
                                <label for="dateOfBirth" class="form-label">Date of Birth</label>
                            </div>  
                        </div>
                    </div>
    
                    <!-- Address -->
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="text"
                                    class="form-control"
                                    name="address"
                                    id="address"
                                    placeholder="Address"
                                    required
                                />
                                <label for="address" class="form-label">Address</label>
                            </div>
                        </div> 
                    </div>
    
                    <!-- School Level and GPA -->
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="text"
                                    class="form-control"
                                    name="schoolLevel"
                                    id="schoolLevel"
                                    placeholder="School Level"
                                    required
                                />
                                <label for="schoolLevel" class="form-label">School Level</label>
                            </div>  
                        </div>
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="number"
                                    step="0.01"
                                    class="form-control"
                                    name="publicSchoolGPA"
                                    id="publicSchoolGPA"
                                    placeholder="GPA"
                                    required
                                />
                                <label for="publicSchoolGPA" class="form-label">Public School GPA</label>
                            </div>  
                        </div>
                    </div>
    
                    <!-- Annual Income -->
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="number"
                                    step="0.01"
                                    class="form-control"
                                    name="annualIncome"
                                    id="annualIncome"
                                    placeholder="Annual Income"
                                    required
                                />
                                <label for="annualIncome" class="form-label">Annual Income</label>
                            </div>  
                        </div>
                    </div>
    
                    <!-- Other Contact (Email) -->
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                    type="email"
                                    class="form-control"
                                    name="otherContact"
                                    id="otherContact"
                                    placeholder="Email"
                                    required
                                />
                                <label for="otherContact" class="form-label">Email</label>
                            </div>  
                        </div> 
                    </div>
    
                    <!-- Narrative -->
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">  
                                <textarea 
                                    class="form-control" 
                                    id="narrative" 
                                    name="narrative" 
                                    placeholder="Why do you want to be in the program?"
                                    required
                                ></textarea>
                                <label for="narrative" class="form-label">Narrative - Why do you want to be in the program?</label>
                            </div>
                        </div>
                    </div>
    
                    <!-- Transportation Assistance -->
                    <div class="row">
                        <div class="col">
                            <div class="form-check m-3">  
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name="needTransportationAssistance"
                                    value="1"
                                    id="transportation"
                                />
                                <label class="form-check-label" for="transportation"> Do you require Transportation Assistance? </label>
                            </div>
                        </div>
                    </div>
    
                    <!-- Meal Assistance -->
                    <div class="row">
                        <div class="col">
                            <div class="form-check m-3">  
                                <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name="needMealAssistance"
                                    value="1"
                                    id="meal"
                                />
                                <label class="form-check-label" for="meal"> Do you require Meal Assistance? </label>
                            </div>
                        </div>
                    </div>
    
                    <!-- Submit Button -->
                    <div class="row">
                        <div class="col">
                            <div class="m-3">  
                                <button class="btn btn-success" type="submit">Submit Application</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </main>
        <footer>
            <!-- place footer here -->
        </footer>
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>

        <!-- Icons -->
        <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
        <script>
        feather.replace()
        </script>
    </body>
</html>
