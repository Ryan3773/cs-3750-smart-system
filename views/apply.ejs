<!doctype html>
<html lang="en">
    <head>
        <title>Application</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />

        <link href="/stylesheets/header.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <div class="px-3 py-2 bg-dark text-white">
              <div class="container">
                <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                  <div class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
                    <span>No Poor Among Us</span>
                  </div>
        
                  <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
                    <li>
                      <a href="/" class="nav-link text-white">
                        <div class="row">
                          <span data-feather="home"></span>
                        </div>
                        <div class="row gy-1" style="text-align: center;">
                          <span>Home</span>
                        </div>
                      </a>
                    </li>
                    <li>
                      <a href="#" class="nav-link text-secondary">
                        <div class="row">
                          <span data-feather="file-text"></span>
                        </div>
                        <div class="row gy-1" style="text-align: center;">
                          <span>Apply Now</span>
                        </div>
                      </a>
                    </li>
                    <li style="display: grid; align-items: center;">
                      <a href="login" class="nav-link text-white">
                        <div class="row">
                          <span data-feather="user"></span>
                        </div>
                        <div class="row gy-1" style="text-align: center;">
                          <span>Login</span>
                        </div>
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </header>

        <main>
            <div class="container border rounded mt-5">
                <form method="post">
                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="firstName"
                                id="firstName"
                                placeholder="xxxxx"
                                />
                                <label for="firstName" class="form-label">First Name</label>
                            </div>  
                        </div>
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="lastName"
                                id="lastName"
                                placeholder="xxxxx"
                                />
                                <label for="lastName" class="form-label">Last Name</label>
                            </div>  
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="email"
                                id="email"
                                placeholder="xxxxx"
                                />
                                <label for="email" class="form-label">Email</label>
                            </div>  
                        </div> 
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="address"
                                id="address"
                                placeholder="xxxxx"
                                />
                                <label for="address" class="form-label">Address</label>
                            </div>
                        </div> 
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="publicSchoolLevel"
                                id="publicSchoolLevel"
                                placeholder="xxxxx"
                                />
                                <label for="publicSchoolLevel" class="form-label">Public School Level</label>
                            </div>  
                        </div>
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="publicSchoolGPA"
                                id="publicSchoolGPA"
                                placeholder="xxxxx"
                                />
                                <label for="publicSchoolGPA" class="form-label">Public School GPA</label>
                            </div>  
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="guardianOneFirstName"
                                id="guardianOneFirstName"
                                placeholder="xxxxx"
                                />
                                <label for="guardianOneFirstName" class="form-label">Parent/Guardian 1 First Name</label>
                            </div>
                        </div> 
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="guardianOneLastName"
                                id="guardianOneLastName"
                                placeholder="xxxxx"
                                />
                                <label for="guardianOneLastName" class="form-label">Parent/Guardian 1 Last Name</label>
                            </div>
                        </div> 
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="relationshipOne"
                                id="relationshipOne"
                                placeholder="xxxxx"
                                />
                                <label for="relationshipOne" class="form-label">Relationship to Parent/Guardian 1</label>
                            </div>
                        </div> 
                        <div class="col">
                            <div class="form-floating m-3">
                                <input
                                type="text"
                                class="form-control"
                                name="incomeOne"
                                id="incomeOne"
                                placeholder="xxxxx"
                                />
                                <label for="incomeOne" class="form-label">Parent/Guardian 1 Income</label>
                            </div>
                        </div> 
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">  
                                <button class="btn btn-secondary" type="submit">Add a Parent/Guardian</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">  
                                <textarea class="form-control" id="narrative" name="narrative" placeholder="xxxxx"></textarea>
                                <label for="narrative" class="form-label">Narrative - Why do you want to be in the program?</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">  
                                <div class="form-check">
                                    <input
                                        class="form-check-input"
                                        type="checkbox"
                                        value="0"
                                        id="transportation"
                                    />
                                    <label class="form-check-label" for="transportation"> Do you require Transportation Assistance? </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">  
                                <div class="form-check">
                                    <input
                                        class="form-check-input"
                                        type="checkbox"
                                        value="0"
                                        id="meal"
                                    />
                                    <label class="form-check-label" for="meal"> Do you require Meal Assistance? </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="form-floating m-3">  
                                <button class="btn btn-secondary" type="submit">Submit Application</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </main>
        <footer>
            <!-- place footer here -->
        </footer>
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>

        <!-- Icons -->
        <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
        <script>
        feather.replace()
        </script>
    </body>
</html>
